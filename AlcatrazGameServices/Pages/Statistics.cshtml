@page "{p?}"
@model Alcatraz.GameServices.Pages.StatisticsModel
@{
    ViewBag.Title = "Statistics";
}

<h4>Statistics</h4>

<div class="row">
    <div class="col-md-4">Registered users</div>
    <div class="col-md-4">@Model.NumRegisteredUsers</div>
</div>
<div class="row">
    <div class="col-md-4">Players online</div>
    <div class="col-md-4">@Model.NumPlayersOnline</div>
</div>
<br />
<hr />
<nav aria-label="Page navigation example">
    <ul class="pagination">
        @for (var i = Math.Max(Model.CurPage - 10, 0); i < Math.Min(Model.NumPages, Model.CurPage + 10); i++)
        {
        <li class="page-item"><a class="page-link" href="@Url.Page("Statistics", new { p = i + 1 })">@(i+1)</a></li>
        }
    </ul>
</nav>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nick name</th>
            <th scope="col">XP</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var player in Model.PlayerStats)
		{
        <tr>
            <th scope="row">@player.PlayerNickname</th>
            <td>@player.XP</td>
        </tr>
		}

    </tbody>
</table>